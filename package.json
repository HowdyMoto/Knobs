{
  "name": "knobs",
  "version": "1.0.0",
  "description": "Rotatable knob controls for audio/music web apps - like guitar amps and vintage stereos",
  "main": "dist/knobs.js",
  "module": "dist/knobs.esm.js",
  "types": "dist/knobs.d.ts",
  "files": [
    "dist",
    "examples"
  ],
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild src/index.ts --bundle --outfile=dist/knobs.js --format=iife --global-name=Knobs && esbuild src/index.ts --bundle --outfile=dist/knobs.esm.js --format=esm",
    "dev": "tsc --watch",
    "watch": "esbuild src/index.ts --bundle --outfile=dist/knobs.esm.js --format=esm --watch",
    "examples": "http-server . -p 8080 -o examples/index.html"
  },
  "keywords": [
    "knob",
    "dial",
    "audio",
    "music",
    "ui",
    "control",
    "svg"
  ],
  "author": "Wright Bagwell",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.19.0",
    "http-server": "^14.1.1",
    "typescript": "^5.0.0"
  }
}
